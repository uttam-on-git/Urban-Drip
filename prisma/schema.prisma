generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER 
  ADMIN
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  role Role @default(USER)
  isEmailVerified Boolean @default(false)
  phone String?
  address String?

  avatarUrl String?
  avatarPublicId String?

  deletedAt DateTime? 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([deletedAt])
} 

model OTP {
  id String   @id @default(cuid())
  email String
  otp String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Media {
  id            String    @id @default(cuid())
  asset_id      String
  public_id     String
  path          String
  secure_url    String
  thumbnail_url String
  alt           String?
  title         String?
  deletedAt     DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt 

  @@index([deletedAt])
}